
@model TigerTix.Web.Models.Payment

<h1>Add a Payment Method</h1>

<form asp-controller="Payment" asp-action="AddMethod" method="post">
    <div>
        <label for="CardNumber">Card Number:</label>
        <input type="text" id="CardNumber" name="CardNumber" />
    </div>
    <div>
        <label for="ExpirationDate">Expiration Date:</label>
        <input type="text" id="ExpirationDate" name="ExpirationDate" />
    </div>
    <div>
        <label for="CVV">CVV:</label>
        <input type="text" id="CVV" name="CVV" />
    </div>
    <div>
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" />
    </div>
    <div>
        <label for="ZipCode">Zip Code:</label>
        <input type="text" id="ZipCode" name="ZipCode" />
    </div>
    <button type="submit">Submit Payment</button>
</form>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div>@ViewBag.Message</div>
}

<button id="homeButton">Go Home</button>

<script>
    document.getElementById('homeButton').addEventListener('click', function () {
        window.location.href = '/';
    });
</script>